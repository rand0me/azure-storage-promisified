{
    "compileOnSave": false,
    "compilerOptions": {
        "lib": [ "es2015" ],
        "target": "es2015",
        "moduleResolution": "node",
        "skipLibCheck": true,
        "noImplicitAny": true,
        "pretty": true,
        "sourceMap": true,
        "declaration": true,
        "outDir": "dist"
    },
    "include": [
        "src/**/*.*"
    ],
    "exclude": [
        "node_modules"
    ]
}